<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cl_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <View
        android:id="@+id/view_head"
        android:layout_width="@dimen/dp_100"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="0dp"/>

    <ImageView
        android:id="@+id/iv_head"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        app:layout_constraintTop_toTopOf="@+id/view_head"
        app:layout_constraintBottom_toBottomOf="@+id/view_head"
        tools:src="@mipmap/default_head"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginBottom="@dimen/dp_8"
        android:layout_marginStart="@dimen/dp_15"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="@+id/view_head"/>

    <ImageView
        android:id="@+id/iv_head_tag"
        android:layout_width="@dimen/dp_18"
        android:layout_height="@dimen/dp_18"
        app:layout_constraintBottom_toBottomOf="@+id/iv_head"
        android:src="@mipmap/ic_punishment_yellow"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginBottom="@dimen/dp_8"
        android:scaleType="fitCenter"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_marginStart="@dimen/dp_5"
        app:layout_constraintStart_toEndOf="@+id/iv_head"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="@dimen/dp_60"
        android:layout_height="0dp"
        android:gravity="center"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/view_head"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="姓名"/>

    <TextView
        android:id="@+id/tv_xrzw"
        android:layout_width="@dimen/dp_140"
        android:layout_height="0dp"
        android:gravity="center"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/tv_name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="现任职务现任职务现任职务现任职务现任职职务现任职务现任职务"/>

    <TextView
        android:id="@+id/tv_xrzsj"
        android:layout_width="@dimen/dp_90"
        android:layout_height="0dp"
        android:textSize="14sp"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@+id/tv_xrzw"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="现任职时间"/>

    <TextView
        android:id="@+id/tv_zwjb"
        android:layout_width="@dimen/dp_100"
        android:layout_height="0dp"
        android:textSize="14sp"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@+id/tv_xrzsj"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="职务级别"/>

    <TextView
        android:id="@+id/tv_rzjsj"
        android:layout_width="@dimen/dp_90"
        android:layout_height="0dp"
        android:textSize="14sp"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@+id/tv_zwjb"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="任职级时间"/>

    <TextView
        android:id="@+id/tv_sex"
        android:layout_width="@dimen/dp_50"
        android:layout_height="0dp"
        android:textSize="14sp"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@+id/tv_rzjsj"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="性别"/>

    <TextView
        android:id="@+id/tv_nation"
        android:layout_width="@dimen/dp_90"
        android:layout_height="0dp"
        android:textSize="14sp"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@+id/tv_sex"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="民族"/>

    <TextView
        android:id="@+id/tv_place"
        android:layout_width="@dimen/dp_90"
        android:layout_height="0dp"
        android:textSize="14sp"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@+id/tv_nation"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="籍贯"/>

    <TextView
        android:id="@+id/tv_csny"
        android:layout_width="@dimen/dp_90"
        android:layout_height="0dp"
        android:textSize="14sp"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@+id/tv_place"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="出生年月"/>

    <TextView
        android:id="@+id/tv_rdsj"
        android:layout_width="@dimen/dp_90"
        android:layout_height="0dp"
        android:textSize="14sp"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@+id/tv_csny"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="入党时间"/>

    <TextView
        android:id="@+id/tv_qrzwhcd"
        android:layout_width="@dimen/dp_120"
        android:layout_height="0dp"
        android:textSize="14sp"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@+id/tv_rdsj"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="全日制文化程度"/>

    <TextView
        android:id="@+id/tv_zzwhcd"
        android:layout_width="@dimen/dp_120"
        android:layout_height="0dp"
        android:textSize="14sp"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@+id/tv_qrzwhcd"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="在职文化程度"/>

</androidx.constraintlayout.widget.ConstraintLayout>