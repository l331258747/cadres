<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:overScrollMode="never">


<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_marginBottom="@dimen/dp_20"
    android:layout_height="match_parent">

    <View
        android:id="@+id/view_top"
        android:layout_width="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="0dp"/>


    <View
        android:id="@+id/view_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@+id/view_top"
        app:layout_constraintTop_toTopOf="@+id/view_top"
        android:layout_marginTop="@dimen/dp_20"
        app:layout_constraintBottom_toBottomOf="@+id/tv_title"
        app:layout_constraintEnd_toStartOf="@+id/view_hylx"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_marginStart="@dimen/dp_20"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/view_title"
        app:layout_constraintTop_toTopOf="@+id/view_title"
        android:text="        标题："/>

    <TextView
        android:id="@+id/tv_title_content"
        android:layout_width="0dp"
        app:layout_constraintStart_toEndOf="@+id/tv_title"
        app:layout_constraintTop_toTopOf="@+id/tv_title"
        app:layout_constraintEnd_toEndOf="@+id/view_title"
        tools:text="标题"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/view_hylx"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@+id/view_title"
        app:layout_constraintTop_toTopOf="@+id/view_top"
        android:layout_marginTop="@dimen/dp_20"
        app:layout_constraintBottom_toBottomOf="@+id/tv_title"
        app:layout_constraintEnd_toEndOf="@+id/view_top"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_marginStart="@dimen/dp_20"/>

    <TextView
        android:id="@+id/tv_hylx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/view_hylx"
        app:layout_constraintTop_toTopOf="@+id/view_hylx"
        android:text="会议类型："/>

    <TextView
        android:id="@+id/tv_hylx_content"
        android:layout_width="0dp"
        app:layout_constraintStart_toEndOf="@+id/tv_hylx"
        app:layout_constraintTop_toTopOf="@+id/tv_hylx"
        app:layout_constraintEnd_toEndOf="@+id/view_hylx"
        tools:text="会议类型"
        android:layout_height="wrap_content"/>


    <View
        android:id="@+id/view_chry"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@+id/view_top"
        app:layout_constraintTop_toBottomOf="@+id/view_title"
        android:layout_marginTop="@dimen/dp_20"
        app:layout_constraintBottom_toBottomOf="@+id/tv_chry"
        app:layout_constraintEnd_toStartOf="@+id/view_shsj"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_marginStart="@dimen/dp_20"/>

    <TextView
        android:id="@+id/tv_chry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/view_chry"
        app:layout_constraintTop_toTopOf="@+id/view_chry"
        android:text="参会人员："/>

    <TextView
        android:id="@+id/tv_chry_content"
        android:layout_width="0dp"
        app:layout_constraintStart_toEndOf="@+id/tv_chry"
        app:layout_constraintTop_toTopOf="@+id/tv_chry"
        app:layout_constraintEnd_toEndOf="@+id/view_chry"
        tools:text="参会人员"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/view_shsj"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@+id/view_chry"
        app:layout_constraintTop_toBottomOf="@+id/view_title"
        android:layout_marginTop="@dimen/dp_20"
        app:layout_constraintBottom_toBottomOf="@+id/tv_shsj"
        app:layout_constraintEnd_toEndOf="@+id/view_top"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_marginStart="@dimen/dp_20"/>

    <TextView
        android:id="@+id/tv_shsj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/view_shsj"
        app:layout_constraintTop_toTopOf="@+id/view_shsj"
        android:text="上会时间："/>

    <TextView
        android:id="@+id/tv_shsj_content"
        android:layout_width="0dp"
        app:layout_constraintStart_toEndOf="@+id/tv_shsj"
        app:layout_constraintTop_toTopOf="@+id/tv_shsj"
        app:layout_constraintEnd_toEndOf="@+id/view_shsj"
        tools:text="上会时间"
        android:layout_height="wrap_content"/>


    <View
        android:id="@+id/view_hynr"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@+id/view_top"
        app:layout_constraintTop_toBottomOf="@+id/view_chry"
        android:layout_marginTop="@dimen/dp_20"
        app:layout_constraintBottom_toBottomOf="@+id/tv_hynr"
        app:layout_constraintEnd_toEndOf="@+id/view_top"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_marginStart="@dimen/dp_20"/>

    <TextView
        android:id="@+id/tv_hynr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/view_hynr"
        app:layout_constraintTop_toTopOf="@+id/view_hynr"
        android:text="会议内容："/>

    <TextView
        android:id="@+id/tv_hynr_content"
        android:layout_width="0dp"
        app:layout_constraintStart_toEndOf="@+id/tv_hynr"
        app:layout_constraintTop_toTopOf="@+id/tv_hynr"
        app:layout_constraintEnd_toEndOf="@+id/view_hynr"
        tools:text="会议内容"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/view_top_line"
        android:layout_width="0dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_hynr_content"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginStart="@dimen/dp_10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/color_b31f23"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_height="@dimen/dp_1"/>

    <TextView
        android:id="@+id/tv_content_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginEnd="@dimen/dp_20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        android:gravity="center"
        android:textSize="@dimen/sp_24"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        android:text="有关干部调整配备情况汇报"
        app:layout_constraintTop_toBottomOf="@+id/view_top_line"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginEnd="@dimen/dp_20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_content_title"
        app:layout_constraintVertical_bias="1.0" />

    <View
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/color_b31f23"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:layout_width="@dimen/dp_1"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/color_b31f23"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <View
        android:layout_width="@dimen/dp_1"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/color_b31f23"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    
</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>