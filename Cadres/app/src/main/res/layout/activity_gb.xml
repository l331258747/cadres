<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group_View_top"
        android:layout_width="wrap_content"
        app:constraint_referenced_ids="
        view_top,
        view_top_title,tv_top_title,tv_top_btn,
        view_top_title2,tv_top_hdzs,tv_top_hdzs2,tv_top_sjpb,tv_top_sjpb2,
        view_top_line,
        view_top_title3,tv_top_cpqk,tv_top_cpqk2,tv_top_kqqk,tv_top_kqqk2"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/view_top"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_100"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_15"
        android:background="@color/color_fdf5ed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_top_title"
        android:layout_width="@dimen/dp_220"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/view_top"
        app:layout_constraintStart_toStartOf="@+id/view_top"
        app:layout_constraintBottom_toBottomOf="@+id/view_top"/>

    <TextView
        android:id="@+id/tv_top_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/dp_10"
        android:paddingEnd="@dimen/dp_10"
        android:textSize="@dimen/sp_14"
        android:maxLines="2"
        app:layout_constraintStart_toStartOf="@+id/view_top_title"
        app:layout_constraintEnd_toEndOf="@+id/view_top_title"
        app:layout_constraintTop_toTopOf="@+id/view_top_title"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/tv_top_btn"
        tools:text="title"/>

    <TextView
        android:id="@+id/tv_top_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/view_top_title"
        app:layout_constraintEnd_toEndOf="@+id/view_top_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_top_title"
        app:layout_constraintBottom_toBottomOf="@+id/view_top_title"
        android:background="@drawable/shape_b31f23_r5"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14"
        android:paddingTop="@dimen/dp_5"
        android:paddingBottom="@dimen/dp_5"
        android:paddingStart="@dimen/dp_10"
        android:paddingEnd="@dimen/dp_10"
        android:text="政治建设考察情况"/>

    <View
        android:id="@+id/view_top_title2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/view_top"
        app:layout_constraintStart_toEndOf="@+id/view_top_title"
        app:layout_constraintEnd_toStartOf="@+id/view_top_title3"
        app:layout_constraintBottom_toBottomOf="@+id/view_top"/>

    <TextView
        android:id="@+id/tv_top_hdzs"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/view_top_title2"
        app:layout_constraintBottom_toTopOf="@+id/tv_top_sjpb"
        android:layout_marginStart="@dimen/dp_10"
        android:textSize="@dimen/sp_14"
        app:layout_constraintStart_toStartOf="@+id/view_top_title2"
        android:text="核定职数："
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_top_hdzs2"
        android:layout_width="0dp"
        app:layout_constraintTop_toTopOf="@+id/tv_top_hdzs"
        app:layout_constraintBottom_toBottomOf="@+id/tv_top_hdzs"
        app:layout_constraintStart_toEndOf="@+id/tv_top_hdzs"
        android:layout_marginEnd="@dimen/dp_10"
        android:textSize="@dimen/sp_14"
        android:maxLines="2"
        app:layout_constraintEnd_toEndOf="@+id/view_top_title2"
        tools:text="核定职数核定职数核定定职数核定职数核数："
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_top_sjpb"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_top_hdzs"
        android:layout_marginStart="@dimen/dp_10"
        app:layout_constraintBottom_toBottomOf="@+id/view_top_title2"
        app:layout_constraintStart_toStartOf="@+id/view_top_title2"
        android:text="实际配备："
        android:textSize="@dimen/sp_14"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_top_sjpb2"
        android:layout_width="0dp"
        app:layout_constraintTop_toTopOf="@+id/tv_top_sjpb"
        app:layout_constraintBottom_toBottomOf="@+id/tv_top_sjpb"
        app:layout_constraintStart_toEndOf="@+id/tv_top_sjpb"
        android:maxLines="2"
        android:layout_marginEnd="@dimen/dp_10"
        android:textSize="@dimen/sp_14"
        app:layout_constraintEnd_toEndOf="@+id/view_top_title2"
        tools:text="实际配备实际配备备实际备备实际配备："
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/view_top_line"
        android:layout_width="@dimen/dp_1"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/view_top"
        app:layout_constraintBottom_toBottomOf="@+id/view_top"
        app:layout_constraintStart_toEndOf="@+id/view_top_title2"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_5"
        android:background="@color/color_ffd7b4"
        app:layout_constraintEnd_toStartOf="@+id/view_top_title3"/>

    <View
        android:id="@+id/view_top_title3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/view_top"
        app:layout_constraintStart_toEndOf="@+id/view_top_title2"
        app:layout_constraintEnd_toEndOf="@+id/view_top"
        app:layout_constraintBottom_toBottomOf="@+id/view_top"/>

    <TextView
        android:id="@+id/tv_top_cpqk"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/view_top_title3"
        app:layout_constraintBottom_toTopOf="@+id/tv_top_kqqk"
        android:layout_marginStart="@dimen/dp_10"
        app:layout_constraintStart_toStartOf="@+id/view_top_title3"
        android:textSize="@dimen/sp_14"
        android:text="超配情况："
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_top_cpqk2"
        android:layout_width="0dp"
        app:layout_constraintTop_toTopOf="@+id/tv_top_cpqk"
        app:layout_constraintBottom_toBottomOf="@+id/tv_top_cpqk"
        app:layout_constraintStart_toEndOf="@+id/tv_top_cpqk"
        android:layout_marginEnd="@dimen/dp_10"
        android:textSize="@dimen/sp_14"
        android:maxLines="2"
        app:layout_constraintEnd_toEndOf="@+id/view_top_title3"
        tools:text="核定职数核定职数核定定职数核定职数核数："
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_top_kqqk"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_top_cpqk"
        android:layout_marginStart="@dimen/dp_10"
        app:layout_constraintBottom_toBottomOf="@+id/view_top_title3"
        app:layout_constraintStart_toStartOf="@+id/view_top_title3"
        android:text="空缺情况："
        android:textSize="@dimen/sp_14"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_top_kqqk2"
        android:layout_width="0dp"
        app:layout_constraintTop_toTopOf="@+id/tv_top_kqqk"
        app:layout_constraintBottom_toBottomOf="@+id/tv_top_kqqk"
        app:layout_constraintStart_toEndOf="@+id/tv_top_kqqk"
        android:maxLines="2"
        android:textSize="@dimen/sp_14"
        android:layout_marginEnd="@dimen/dp_10"
        app:layout_constraintEnd_toEndOf="@+id/view_top_title3"
        tools:text="实际配备实际配备备实际备备实际配备："
        android:layout_height="wrap_content"/>

    <HorizontalScrollView
        android:layout_width="0dp"
        android:layout_marginStart="@dimen/dp_15"
        app:layout_goneMarginTop="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_15"
        app:layout_constraintEnd_toEndOf="parent"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:fillViewport="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/view_bottom"
        app:layout_constraintTop_toBottomOf="@+id/view_top"
        android:layout_height="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <include layout="@layout/layout_gb_list_title"/>
            <include layout="@layout/layout_gb_list_title_ldgb"/>
            <include layout="@layout/layout_gb_list_title_gwy"/>
            <include layout="@layout/layout_gb_list_title_hbgb"/>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dp_20"
                android:orientation="vertical"
                android:overScrollMode="never" />
        </LinearLayout>

    </HorizontalScrollView>



    <View
        android:id="@+id/view_bottom"
        android:layout_width="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/color_b31f23"
        android:layout_height="@dimen/title_height"/>

    <View
        android:id="@+id/view_menu"
        android:layout_width="@dimen/dp_180"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/view_bottom"
        app:layout_constraintTop_toTopOf="@+id/view_bottom"
        app:layout_constraintStart_toStartOf="@+id/view_bottom"/>

    <ImageView
        android:id="@+id/iv_menu"
        android:layout_width="@dimen/dp_20"
        app:layout_constraintTop_toTopOf="@+id/view_menu"
        app:layout_constraintBottom_toBottomOf="@+id/view_menu"
        app:layout_constraintStart_toStartOf="@+id/view_menu"
        android:layout_marginStart="@dimen/dp_30"
        android:src="@mipmap/ic_menu"
        android:layout_height="@dimen/dp_20"/>

    <TextView
        android:id="@+id/tv_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/view_menu"
        app:layout_constraintBottom_toBottomOf="@+id/view_menu"
        android:layout_marginStart="@dimen/dp_15"
        android:text="单位目录"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/iv_menu"/>

    <EditText
        android:id="@+id/et_search"
        android:layout_width="@dimen/dp_420"
        android:layout_height="@dimen/dp_42"
        android:background="@color/color_fbe7e5"
        android:layout_marginEnd="@dimen/dp_40"
        app:layout_constraintEnd_toEndOf="@+id/view_bottom"
        app:layout_constraintTop_toTopOf="@+id/view_bottom"
        android:hint="请输入关键字进行搜索"
        android:imeOptions="actionSearch"
        android:inputType="text"
        android:maxLength="15"

        android:focusable="false"
        android:editable="false"
        android:focusableInTouchMode="false"

        android:maxLines="1"
        android:drawableLeft="@mipmap/ic_search"
        android:drawablePadding="@dimen/dp_10"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_15"
        app:layout_constraintBottom_toBottomOf="@+id/view_bottom"/>

</androidx.constraintlayout.widget.ConstraintLayout>