<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="@drawable/shape_23cefd_r10">

    <TextView
        android:id="@+id/tv_xhrs_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="消化人数："/>

    <TextView
        android:id="@+id/tv_xhrs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="20"
        app:layout_constraintTop_toTopOf="@+id/tv_xhrs_title"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/tv_xhrs_title"/>

    <TextView
        android:id="@+id/tv_kq_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/tv_xhrs_title"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="@dimen/sp_14"
        android:text="调整到空缺职位任职（人）："/>

    <TextView
        android:id="@+id/tv_kq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="20"
        android:textSize="@dimen/sp_14"
        app:layout_constraintTop_toTopOf="@+id/tv_kq_title"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/tv_kq_title"/>

    <TextView
        android:id="@+id/tv_bx_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/tv_kq_title"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="@dimen/sp_14"
        android:text="职务与职级并行（人）："/>

    <TextView
        android:id="@+id/tv_bx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="20"
        android:textSize="@dimen/sp_14"
        app:layout_constraintTop_toTopOf="@+id/tv_bx_title"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/tv_bx_title"/>

    <TextView
        android:id="@+id/tv_tx_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/tv_bx_title"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="@dimen/sp_14"
        android:text="到龄退休（人）："/>

    <TextView
        android:id="@+id/tv_tx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="20"
        android:textSize="@dimen/sp_14"
        app:layout_constraintTop_toTopOf="@+id/tv_tx_title"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/tv_tx_title"/>

</androidx.constraintlayout.widget.ConstraintLayout>