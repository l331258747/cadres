<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/et_search"
            android:layout_width="@dimen/dp_420"
            android:layout_height="@dimen/dp_40"
            android:background="@drawable/shape_db1b21_fce8e6_r40"
            android:drawableLeft="@mipmap/ic_search"
            android:drawablePadding="@dimen/dp_15"
            android:hint="请输入单位名称进行搜索"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:maxLength="20"
            android:maxLines="1"
            android:paddingStart="@dimen/dp_20"
            android:paddingEnd="@dimen/dp_15"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_title" />

    </LinearLayout>


    <View
        android:id="@+id/view_title"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_100"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_15"
        android:background="@color/color_ffe5ce"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_search" />
<!--单位名称-->
    <TextView
        android:id="@+id/tv_dwmc"
        android:layout_width="@dimen/dp_140"
        android:layout_height="0dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="@+id/view_title"
        app:layout_constraintTop_toTopOf="@+id/view_title"
        app:layout_constraintBottom_toBottomOf="@+id/view_title"
        android:text="单位名称"/>

        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@+id/view_title"
            app:layout_constraintStart_toEndOf="@+id/tv_dwmc"
            app:layout_constraintEnd_toStartOf="@+id/view_hdzs"
            app:layout_constraintBottom_toBottomOf="@+id/view_title"
            android:background="@color/color_ffd7b4"/>

<!--    核定职数-->
    <View
        android:id="@+id/view_hdzs"
        android:layout_width="0dp"
        app:layout_constraintTop_toTopOf="@+id/view_title"
        app:layout_constraintStart_toEndOf="@+id/tv_dwmc"
        app:layout_constraintEnd_toStartOf="@+id/view_spqk"
        app:layout_constraintBottom_toBottomOf="@+id/view_title"
        android:layout_height="0dp"/>

    <TextView
        android:id="@+id/tv_hdzs"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="@+id/view_hdzs"
        app:layout_constraintEnd_toEndOf="@+id/view_hdzs"
        app:layout_constraintTop_toTopOf="@+id/view_hdzs"
        app:layout_constraintBottom_toTopOf="@+id/tv_hdzs_zz"
        android:text="核定职数"/>

    <TextView
        android:id="@+id/tv_hdzs_zz"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="@+id/view_hdzs"
        app:layout_constraintEnd_toStartOf="@+id/tv_hdzs_fz"
        app:layout_constraintTop_toBottomOf="@+id/tv_hdzs"
        app:layout_constraintBottom_toBottomOf="@+id/view_hdzs"
        android:text="乡科级正职"/>

    <View
        android:layout_width="@dimen/dp_1"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/tv_hdzs_zz"
        app:layout_constraintStart_toEndOf="@+id/tv_hdzs_zz"
        app:layout_constraintEnd_toStartOf="@+id/tv_hdzs_fz"
        app:layout_constraintBottom_toBottomOf="@+id/tv_hdzs_zz"
        android:background="@color/color_ffd7b4"/>

    <TextView
        android:id="@+id/tv_hdzs_fz"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@+id/tv_hdzs_zz"
        app:layout_constraintEnd_toStartOf="@+id/tv_hdzs_qt"
        app:layout_constraintTop_toTopOf="@+id/tv_hdzs_zz"
        app:layout_constraintBottom_toBottomOf="@+id/tv_hdzs_zz"
        android:text="乡科级副职"/>

    <View
        android:layout_width="@dimen/dp_1"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/tv_hdzs_zz"
        app:layout_constraintStart_toEndOf="@+id/tv_hdzs_fz"
        app:layout_constraintEnd_toStartOf="@+id/tv_hdzs_qt"
        app:layout_constraintBottom_toBottomOf="@+id/tv_hdzs_zz"
        android:background="@color/color_ffd7b4"/>

    <TextView
        android:id="@+id/tv_hdzs_qt"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@+id/tv_hdzs_fz"
        app:layout_constraintEnd_toEndOf="@+id/view_hdzs"
        app:layout_constraintTop_toTopOf="@+id/tv_hdzs_zz"
        app:layout_constraintBottom_toBottomOf="@+id/tv_hdzs_zz"
        android:text="其他"/>

    <View
        android:layout_width="@dimen/dp_1"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/view_title"
        app:layout_constraintStart_toEndOf="@+id/view_hdzs"
        app:layout_constraintEnd_toStartOf="@+id/view_spqk"
        app:layout_constraintBottom_toBottomOf="@+id/view_title"
        android:background="@color/color_ffd7b4"/>

<!--实配情况-->
    <View
        android:id="@+id/view_spqk"
        android:layout_width="0dp"
        app:layout_constraintTop_toTopOf="@+id/view_title"
        app:layout_constraintBottom_toBottomOf="@+id/view_title"
        app:layout_constraintStart_toEndOf="@+id/view_hdzs"
        app:layout_constraintEnd_toStartOf="@+id/tv_cpqk"
        android:layout_height="0dp"/>

    <TextView
        android:id="@+id/tv_spqk"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="@+id/view_spqk"
        app:layout_constraintEnd_toEndOf="@+id/view_spqk"
        app:layout_constraintTop_toTopOf="@+id/view_spqk"
        app:layout_constraintBottom_toTopOf="@+id/tv_spqk_zz"
        android:text="实际配备"/>

    <TextView
        android:id="@+id/tv_spqk_zz"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="@+id/view_spqk"
        app:layout_constraintEnd_toStartOf="@+id/tv_spqk_fz"
        app:layout_constraintTop_toBottomOf="@+id/tv_spqk"
        app:layout_constraintBottom_toBottomOf="@+id/view_spqk"
        android:text="乡科级正职"/>

    <View
        android:layout_width="@dimen/dp_1"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/tv_hdzs_zz"
        app:layout_constraintStart_toEndOf="@+id/tv_spqk_zz"
        app:layout_constraintEnd_toStartOf="@+id/tv_spqk_fz"
        app:layout_constraintBottom_toBottomOf="@+id/tv_hdzs_zz"
        android:background="@color/color_ffd7b4"/>

    <TextView
        android:id="@+id/tv_spqk_fz"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@+id/tv_spqk_zz"
        app:layout_constraintEnd_toStartOf="@+id/tv_spqk_qt"
        app:layout_constraintTop_toTopOf="@+id/tv_spqk_zz"
        app:layout_constraintBottom_toBottomOf="@+id/tv_spqk_zz"
        android:text="乡科级副职"/>

    <View
        android:layout_width="@dimen/dp_1"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/tv_hdzs_zz"
        app:layout_constraintStart_toEndOf="@+id/tv_spqk_fz"
        app:layout_constraintEnd_toStartOf="@+id/tv_spqk_qt"
        app:layout_constraintBottom_toBottomOf="@+id/tv_hdzs_zz"
        android:background="@color/color_ffd7b4"/>

    <TextView
        android:id="@+id/tv_spqk_qt"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@+id/tv_spqk_fz"
        app:layout_constraintEnd_toEndOf="@+id/view_spqk"
        app:layout_constraintTop_toTopOf="@+id/tv_spqk_zz"
        app:layout_constraintBottom_toBottomOf="@+id/tv_spqk_zz"
        android:text="其他"/>

    <View
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_1"
        app:layout_constraintTop_toBottomOf="@+id/tv_hdzs"
        app:layout_constraintStart_toStartOf="@+id/view_hdzs"
        app:layout_constraintEnd_toEndOf="@+id/view_spqk"
        app:layout_constraintBottom_toTopOf="@+id/tv_hdzs_zz"
        android:background="@color/color_ffd7b4"/>

    <View
        android:layout_width="@dimen/dp_1"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/view_title"
        app:layout_constraintStart_toEndOf="@+id/view_spqk"
        app:layout_constraintEnd_toStartOf="@+id/tv_cpqk"
        app:layout_constraintBottom_toBottomOf="@+id/view_title"
        android:background="@color/color_ffd7b4"/>

<!--超配情况-->
    <TextView
        android:id="@+id/tv_cpqk"
        android:layout_width="@dimen/dp_180"
        android:layout_height="0dp"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@+id/view_spqk"
        app:layout_constraintEnd_toStartOf="@+id/tv_kqqk"
        app:layout_constraintTop_toTopOf="@+id/view_title"
        app:layout_constraintBottom_toBottomOf="@+id/view_title"
        android:text="超配情况"/>

    <View
        android:layout_width="@dimen/dp_1"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/view_title"
        app:layout_constraintStart_toEndOf="@+id/tv_cpqk"
        app:layout_constraintEnd_toStartOf="@+id/tv_kqqk"
        app:layout_constraintBottom_toBottomOf="@+id/view_title"
        android:background="@color/color_ffd7b4"/>

<!--   空缺情况 -->
    <TextView
        android:id="@+id/tv_kqqk"
        android:layout_width="@dimen/dp_180"
        android:layout_height="0dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="@+id/view_title"
        app:layout_constraintTop_toTopOf="@+id/view_title"
        app:layout_constraintBottom_toBottomOf="@+id/view_title"
        android:text="空缺情况"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/dp_20"
        android:orientation="vertical"
        android:overScrollMode="never"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/view_title"
        app:layout_constraintStart_toStartOf="@+id/view_title"
        app:layout_constraintTop_toBottomOf="@+id/view_title" />

</androidx.constraintlayout.widget.ConstraintLayout>