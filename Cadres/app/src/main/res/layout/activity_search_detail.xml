<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/tv_search_content_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_20"
        android:text="筛选条件："
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_search_content"
        android:layout_width="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/tv_search_content_tip"
        tools:text="adsfasdfasdfasdfasdfaadsfasdfasdfasdfasdfaadsfasdfasdfasdfasdfaadsfasdfasdfasdfasdfaadsfasdfasdfasdfasdfaadsfasdfasdfasdfasdfaadsfasdfasdfasdfasdfaadsfasdfasdfasdfasdfaadsfasdfasdfasdfasdfaadsfasdfasdfasdfasdfa"
        app:layout_constraintStart_toEndOf="@+id/tv_search_content_tip"/>

    <TextView
        android:id="@+id/tv_search_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        tools:text="符合条件的20条"
        app:layout_constraintStart_toStartOf="@+id/tv_search_content_tip"
        app:layout_constraintTop_toBottomOf="@+id/tv_search_content" />

    <HorizontalScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:fillViewport="true"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_search_count">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_marginBottom="@dimen/dp_20"
            android:layout_height="match_parent">

            <View
                android:id="@+id/view_title"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_75"
                android:background="@color/color_ffe5ce"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <!--单位名称-->
            <TextView
                android:id="@+id/tv_img"
                android:layout_width="@dimen/dp_100"
                android:layout_height="0dp"
                android:gravity="center"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@+id/view_title"
                app:layout_constraintTop_toTopOf="@+id/view_title"
                app:layout_constraintBottom_toBottomOf="@+id/view_title"
                tools:text="头像"/>

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="@dimen/dp_60"
                android:layout_height="0dp"
                android:gravity="center"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@+id/tv_img"
                app:layout_constraintTop_toTopOf="@+id/view_title"
                app:layout_constraintBottom_toBottomOf="@+id/view_title"
                android:text="姓名"/>

            <TextView
                android:id="@+id/tv_xrzw"
                android:layout_width="@dimen/dp_140"
                android:layout_height="0dp"
                android:gravity="center"
                android:textSize="14sp"
                android:maxLines="3"
                app:layout_constraintStart_toEndOf="@+id/tv_name"
                app:layout_constraintTop_toTopOf="@+id/view_title"
                app:layout_constraintBottom_toBottomOf="@+id/view_title"
                android:text="现任职务"/>

            <TextView
                android:id="@+id/tv_xrzsj"
                android:layout_width="@dimen/dp_90"
                android:layout_height="0dp"
                android:textSize="14sp"
                android:gravity="center"
                app:layout_constraintStart_toEndOf="@+id/tv_xrzw"
                app:layout_constraintTop_toTopOf="@+id/view_title"
                app:layout_constraintBottom_toBottomOf="@+id/view_title"
                android:text="现任职时间"/>

            <TextView
                android:id="@+id/tv_zwjb"
                android:layout_width="@dimen/dp_100"
                android:layout_height="0dp"
                android:textSize="14sp"
                android:gravity="center"
                app:layout_constraintStart_toEndOf="@+id/tv_xrzsj"
                app:layout_constraintTop_toTopOf="@+id/view_title"
                app:layout_constraintBottom_toBottomOf="@+id/view_title"
                android:text="职务级别"/>

            <TextView
                android:id="@+id/tv_rzjsj"
                android:layout_width="@dimen/dp_90"
                android:layout_height="0dp"
                android:textSize="14sp"
                android:gravity="center"
                app:layout_constraintStart_toEndOf="@+id/tv_zwjb"
                app:layout_constraintTop_toTopOf="@+id/view_title"
                app:layout_constraintBottom_toBottomOf="@+id/view_title"
                android:text="任职级时间"/>

            <TextView
                android:id="@+id/tv_sex"
                android:layout_width="@dimen/dp_50"
                android:layout_height="0dp"
                android:textSize="14sp"
                android:gravity="center"
                app:layout_constraintStart_toEndOf="@+id/tv_rzjsj"
                app:layout_constraintTop_toTopOf="@+id/view_title"
                app:layout_constraintBottom_toBottomOf="@+id/view_title"
                android:text="性别"/>

            <TextView
                android:id="@+id/tv_place"
                android:layout_width="@dimen/dp_60"
                android:layout_height="0dp"
                android:textSize="14sp"
                android:gravity="center"
                app:layout_constraintStart_toEndOf="@+id/tv_sex"
                app:layout_constraintTop_toTopOf="@+id/view_title"
                app:layout_constraintBottom_toBottomOf="@+id/view_title"
                android:text="籍贯"/>

            <TextView
                android:id="@+id/tv_csny"
                android:layout_width="@dimen/dp_90"
                android:layout_height="0dp"
                android:textSize="14sp"
                android:gravity="center"
                app:layout_constraintStart_toEndOf="@+id/tv_place"
                app:layout_constraintTop_toTopOf="@+id/view_title"
                app:layout_constraintBottom_toBottomOf="@+id/view_title"
                android:text="出生年月"/>

            <TextView
                android:id="@+id/tv_qrzwhcd"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:textSize="14sp"
                android:gravity="center"
                app:layout_constraintStart_toEndOf="@+id/tv_csny"
                app:layout_constraintEnd_toStartOf="@+id/tv_zzwhcd"
                app:layout_constraintTop_toTopOf="@+id/view_title"
                app:layout_constraintBottom_toBottomOf="@+id/view_title"
                android:text="全日制\n文化程度"/>

            <TextView
                android:id="@+id/tv_zzwhcd"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:textSize="14sp"
                android:gravity="center"
                app:layout_constraintStart_toEndOf="@+id/tv_qrzwhcd"
                app:layout_constraintEnd_toEndOf="@+id/view_title"
                app:layout_constraintTop_toTopOf="@+id/view_title"
                app:layout_constraintBottom_toBottomOf="@+id/view_title"
                android:text="在职\n文化程度"/>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:overScrollMode="never"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/view_title"
                app:layout_constraintStart_toStartOf="@+id/view_title"
                app:layout_constraintTop_toBottomOf="@+id/view_title" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </HorizontalScrollView>
    
</androidx.constraintlayout.widget.ConstraintLayout>