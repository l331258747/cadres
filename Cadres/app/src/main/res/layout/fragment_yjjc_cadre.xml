<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <TextView
        android:id="@+id/tv_tip"
        android:layout_width="@dimen/dp_15"
        android:layout_height="@dimen/dp_15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="!"
        android:gravity="center"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_5"
        android:visibility="gone"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/white"
        android:background="@drawable/shape_cff0000_r40"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/tv_tip"
        android:layout_marginStart="@dimen/dp_8"
        android:textSize="@dimen/sp_12"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@+id/tv_tip"
        app:layout_constraintBottom_toBottomOf="@+id/tv_tip"
        android:text="注：姓名前标有“△”为提拔乡科级正职任用，“▲”为乡科级副职人员。"/>

    <HorizontalScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:overScrollMode="never"
        android:scrollbars="none"
        app:layout_constraintEnd_toEndOf="parent"
        android:fillViewport="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_tip">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/view_title"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_120"
                android:background="@color/color_ffe5ce"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_tip2"
                android:layout_width="@dimen/dp_40"
                android:layout_height="0dp"
                android:gravity="center"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="@+id/view_title"
                app:layout_constraintTop_toTopOf="@+id/view_title"
                app:layout_constraintBottom_toBottomOf="@+id/view_title"
                tools:text="三角"/>

            <View
                android:layout_width="@dimen/dp_1"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="@+id/view_title"
                app:layout_constraintStart_toEndOf="@+id/tv_tip2"
                app:layout_constraintEnd_toStartOf="@+id/tv_name"
                app:layout_constraintBottom_toBottomOf="@+id/view_title"
                android:background="@color/color_ffd7b4"/>

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="@dimen/dp_80"
                android:layout_height="0dp"
                android:gravity="center"
                app:layout_constraintStart_toEndOf="@+id/tv_tip2"
                app:layout_constraintTop_toTopOf="@+id/view_title"
                app:layout_constraintBottom_toBottomOf="@+id/view_title"
                android:text="姓名"/>

            <View
                android:layout_width="@dimen/dp_1"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="@+id/view_title"
                app:layout_constraintStart_toEndOf="@+id/tv_name"
                app:layout_constraintEnd_toStartOf="@+id/tv_csny"
                app:layout_constraintBottom_toBottomOf="@+id/view_title"
                android:background="@color/color_ffd7b4"/>

            <TextView
                android:id="@+id/tv_csny"
                android:layout_width="@dimen/dp_80"
                android:layout_height="0dp"
                android:gravity="center"
                app:layout_constraintStart_toEndOf="@+id/tv_name"
                app:layout_constraintTop_toTopOf="@+id/view_title"
                app:layout_constraintBottom_toBottomOf="@+id/view_title"
                android:text="出生年月"/>

            <View
                android:layout_width="@dimen/dp_1"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="@+id/view_title"
                app:layout_constraintStart_toEndOf="@+id/tv_csny"
                app:layout_constraintEnd_toStartOf="@+id/tv_rdsj"
                app:layout_constraintBottom_toBottomOf="@+id/view_title"
                android:background="@color/color_ffd7b4"/>

            <TextView
                android:id="@+id/tv_rdsj"
                android:layout_width="@dimen/dp_80"
                android:layout_height="0dp"
                android:gravity="center"
                app:layout_constraintStart_toEndOf="@+id/tv_csny"
                app:layout_constraintTop_toTopOf="@+id/view_title"
                app:layout_constraintBottom_toBottomOf="@+id/view_title"
                android:text="入党时间"/>

            <View
                android:layout_width="@dimen/dp_1"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="@+id/view_title"
                app:layout_constraintStart_toEndOf="@+id/tv_rdsj"
                app:layout_constraintEnd_toStartOf="@+id/tv_xrzw"
                app:layout_constraintBottom_toBottomOf="@+id/view_title"
                android:background="@color/color_ffd7b4"/>

            <TextView
                android:id="@+id/tv_xrzw"
                android:layout_width="@dimen/dp_80"
                android:layout_height="0dp"
                android:gravity="center"
                app:layout_constraintStart_toEndOf="@+id/tv_rdsj"
                app:layout_constraintTop_toTopOf="@+id/view_title"
                app:layout_constraintBottom_toBottomOf="@+id/view_title"
                android:text="现任职务"/>

            <View
                android:layout_width="@dimen/dp_1"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="@+id/view_title"
                app:layout_constraintStart_toEndOf="@+id/tv_xrzw"
                app:layout_constraintEnd_toStartOf="@+id/tv_nrzw"
                app:layout_constraintBottom_toBottomOf="@+id/view_title"
                android:background="@color/color_ffd7b4"/>

            <TextView
                android:id="@+id/tv_nrzw"
                android:layout_width="@dimen/dp_80"
                android:layout_height="0dp"
                android:gravity="center"
                app:layout_constraintStart_toEndOf="@+id/tv_xrzw"
                app:layout_constraintTop_toTopOf="@+id/view_title"
                app:layout_constraintBottom_toBottomOf="@+id/view_title"
                android:text="拟任职务"/>

            <View
                android:layout_width="@dimen/dp_1"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="@+id/view_title"
                app:layout_constraintStart_toEndOf="@+id/tv_nrzw"
                app:layout_constraintEnd_toStartOf="@+id/tv_nmzw"
                app:layout_constraintBottom_toBottomOf="@+id/view_title"
                android:background="@color/color_ffd7b4"/>

            <TextView
                android:id="@+id/tv_nmzw"
                android:layout_width="@dimen/dp_80"
                android:layout_height="0dp"
                android:gravity="center"
                app:layout_constraintStart_toEndOf="@+id/tv_nrzw"
                app:layout_constraintTop_toTopOf="@+id/view_title"
                app:layout_constraintBottom_toBottomOf="@+id/view_title"
                android:text="拟免职务"/>

            <View
                android:layout_width="@dimen/dp_1"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="@+id/view_title"
                app:layout_constraintStart_toEndOf="@+id/tv_nmzw"
                app:layout_constraintEnd_toStartOf="@+id/tv_xrzsj"
                app:layout_constraintBottom_toBottomOf="@+id/view_title"
                android:background="@color/color_ffd7b4"/>

            <TextView
                android:id="@+id/tv_xrzsj"
                android:layout_width="@dimen/dp_80"
                android:layout_height="0dp"
                android:gravity="center"
                app:layout_constraintStart_toEndOf="@+id/tv_nmzw"
                app:layout_constraintTop_toTopOf="@+id/view_title"
                app:layout_constraintBottom_toBottomOf="@+id/view_title"
                android:text="现任职时间"/>

            <View
                android:layout_width="@dimen/dp_1"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="@+id/view_title"
                app:layout_constraintStart_toEndOf="@+id/tv_xrzsj"
                app:layout_constraintEnd_toStartOf="@+id/tv_jg"
                app:layout_constraintBottom_toBottomOf="@+id/view_title"
                android:background="@color/color_ffd7b4"/>

            <TextView
                android:id="@+id/tv_jg"
                android:layout_width="@dimen/dp_80"
                android:layout_height="0dp"
                android:gravity="center"
                app:layout_constraintStart_toEndOf="@+id/tv_xrzsj"
                app:layout_constraintTop_toTopOf="@+id/view_title"
                app:layout_constraintBottom_toBottomOf="@+id/view_title"
                android:text="籍贯"/>

            <View
                android:layout_width="@dimen/dp_1"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="@+id/view_title"
                app:layout_constraintStart_toEndOf="@+id/tv_jg"
                app:layout_constraintEnd_toStartOf="@+id/tv_whcd"
                app:layout_constraintBottom_toBottomOf="@+id/view_title"
                android:background="@color/color_ffd7b4"/>

            <TextView
                android:id="@+id/tv_whcd"
                android:layout_width="@dimen/dp_160"
                android:layout_height="0dp"
                android:gravity="center"
                app:layout_constraintStart_toEndOf="@+id/tv_jg"
                app:layout_constraintTop_toTopOf="@+id/view_title"
                app:layout_constraintBottom_toTopOf="@+id/tv_whcd_qrz"
                android:text="文化程度"/>

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_1"
                app:layout_constraintTop_toBottomOf="@+id/tv_whcd"
                app:layout_constraintStart_toStartOf="@+id/tv_whcd"
                app:layout_constraintEnd_toEndOf="@+id/tv_whcd"
                app:layout_constraintBottom_toTopOf="@+id/tv_whcd_qrz"
                android:background="@color/color_ffd7b4"/>

            <TextView
                android:id="@+id/tv_whcd_qrz"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="@+id/tv_whcd"
                app:layout_constraintTop_toBottomOf="@+id/tv_whcd"
                app:layout_constraintEnd_toStartOf="@+id/tv_whcd_zz"
                app:layout_constraintBottom_toBottomOf="@+id/view_title"
                android:text="全日制文化程度"/>

            <View
                android:layout_width="@dimen/dp_1"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="@+id/tv_whcd_qrz"
                app:layout_constraintStart_toEndOf="@+id/tv_whcd_qrz"
                app:layout_constraintEnd_toStartOf="@+id/tv_whcd_zz"
                app:layout_constraintBottom_toBottomOf="@+id/view_title"
                android:background="@color/color_ffd7b4"/>

            <TextView
                android:id="@+id/tv_whcd_zz"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                app:layout_constraintStart_toEndOf="@+id/tv_whcd_qrz"
                app:layout_constraintTop_toBottomOf="@+id/tv_whcd"
                app:layout_constraintEnd_toEndOf="@+id/tv_whcd"
                app:layout_constraintBottom_toBottomOf="@+id/view_title"
                android:text="在职文化程度"/>

            <View
                android:layout_width="@dimen/dp_1"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="@+id/view_title"
                app:layout_constraintStart_toEndOf="@+id/tv_whcd_zz"
                app:layout_constraintEnd_toStartOf="@+id/tv_mztjqk"
                app:layout_constraintBottom_toBottomOf="@+id/view_title"
                android:background="@color/color_ffd7b4"/>

            <TextView
                android:id="@+id/tv_mztjqk"
                android:layout_width="@dimen/dp_380"
                android:layout_height="0dp"
                android:gravity="center"
                app:layout_constraintStart_toEndOf="@+id/tv_whcd"
                app:layout_constraintTop_toTopOf="@+id/view_title"
                app:layout_constraintBottom_toTopOf="@+id/tv_thyjtj"
                android:text="民主推荐情况"/>

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_1"
                app:layout_constraintTop_toBottomOf="@+id/tv_mztjqk"
                app:layout_constraintStart_toStartOf="@+id/tv_mztjqk"
                app:layout_constraintEnd_toEndOf="@+id/tv_mztjqk"
                app:layout_constraintBottom_toTopOf="@+id/tv_thyjtj"
                android:background="@color/color_ffd7b4"/>

            <TextView
                android:id="@+id/tv_thyjtj"
                android:layout_width="@dimen/dp_230"
                android:layout_height="0dp"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="@+id/tv_mztjqk"
                app:layout_constraintTop_toBottomOf="@+id/tv_mztjqk"
                app:layout_constraintBottom_toTopOf="@+id/tv_thrs"
                android:text="谈话研究推荐"/>

            <View
                android:layout_width="@dimen/dp_1"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="@+id/tv_thyjtj"
                app:layout_constraintStart_toEndOf="@+id/tv_thyjtj"
                app:layout_constraintEnd_toStartOf="@+id/tv_hytj"
                app:layout_constraintBottom_toBottomOf="@+id/view_title"
                android:background="@color/color_ffd7b4"/>

            <TextView
                android:id="@+id/tv_hytj"
                android:layout_width="@dimen/dp_150"
                android:layout_height="0dp"
                android:gravity="center"
                app:layout_constraintStart_toEndOf="@+id/tv_thyjtj"
                app:layout_constraintTop_toBottomOf="@+id/tv_mztjqk"
                app:layout_constraintBottom_toTopOf="@+id/tv_yxp"
                android:text="会议推荐"/>

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_1"
                app:layout_constraintTop_toBottomOf="@+id/tv_thyjtj"
                app:layout_constraintStart_toStartOf="@+id/tv_thyjtj"
                app:layout_constraintEnd_toEndOf="@+id/tv_hytj"
                app:layout_constraintBottom_toTopOf="@+id/tv_thrs"
                android:background="@color/color_ffd7b4"/>

            <TextView
                android:id="@+id/tv_thrs"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="@+id/tv_mztjqk"
                app:layout_constraintEnd_toStartOf="@+id/tv_tjrs"
                app:layout_constraintTop_toBottomOf="@+id/tv_thyjtj"
                app:layout_constraintBottom_toBottomOf="@+id/view_title"
                android:text="谈话人数"/>

            <View
                android:layout_width="@dimen/dp_1"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="@+id/tv_tjrs"
                app:layout_constraintStart_toEndOf="@+id/tv_thrs"
                app:layout_constraintEnd_toStartOf="@+id/tv_tjrs"
                app:layout_constraintBottom_toBottomOf="@+id/view_title"
                android:background="@color/color_ffd7b4"/>

            <TextView
                android:id="@+id/tv_tjrs"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                app:layout_constraintStart_toEndOf="@+id/tv_thrs"
                app:layout_constraintEnd_toStartOf="@+id/tv_pm"
                app:layout_constraintTop_toBottomOf="@+id/tv_thyjtj"
                app:layout_constraintBottom_toBottomOf="@+id/view_title"
                android:text="推荐人数"/>

            <View
                android:layout_width="@dimen/dp_1"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="@+id/tv_tjrs"
                app:layout_constraintStart_toEndOf="@+id/tv_tjrs"
                app:layout_constraintEnd_toStartOf="@+id/tv_pm"
                app:layout_constraintBottom_toBottomOf="@+id/view_title"
                android:background="@color/color_ffd7b4"/>

            <TextView
                android:id="@+id/tv_pm"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                app:layout_constraintStart_toEndOf="@+id/tv_tjrs"
                app:layout_constraintEnd_toEndOf="@+id/tv_thyjtj"
                app:layout_constraintTop_toBottomOf="@+id/tv_thyjtj"
                app:layout_constraintBottom_toBottomOf="@+id/view_title"
                android:text="排名"/>

            <TextView
                android:id="@+id/tv_yxp"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="@+id/tv_hytj"
                app:layout_constraintEnd_toStartOf="@+id/tv_dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_hytj"
                app:layout_constraintBottom_toBottomOf="@+id/view_title"
                android:text="有效票"/>

            <View
                android:layout_width="@dimen/dp_1"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="@+id/tv_yxp"
                app:layout_constraintStart_toEndOf="@+id/tv_yxp"
                app:layout_constraintEnd_toStartOf="@+id/tv_dp"
                app:layout_constraintBottom_toBottomOf="@+id/view_title"
                android:background="@color/color_ffd7b4"/>

            <TextView
                android:id="@+id/tv_dp"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                app:layout_constraintStart_toEndOf="@+id/tv_yxp"
                app:layout_constraintEnd_toEndOf="@+id/tv_hytj"
                app:layout_constraintTop_toBottomOf="@+id/tv_hytj"
                app:layout_constraintBottom_toBottomOf="@+id/view_title"
                android:text="得票"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/dp_20"
                android:orientation="vertical"
                android:overScrollMode="never"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/view_title"
                app:layout_constraintStart_toStartOf="@+id/view_title"
                app:layout_constraintTop_toBottomOf="@+id/view_title" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </HorizontalScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>