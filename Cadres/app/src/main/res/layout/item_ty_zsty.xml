<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/id_ty_zs_layout"
    android:fillViewport="true"
    android:overScrollMode="never"
    tools:background="@color/black"
    android:visibility="visible"
    tools:visibility="visible"
    android:background="@color/transparent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/view_bottom_zs"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="@dimen/dp_30"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@mipmap/ic_zs_line_bg"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view_legend"
            android:layout_width="0dp"
            app:layout_constraintTop_toTopOf="@+id/view_bottom_zs"
            app:layout_constraintStart_toStartOf="@+id/view_bottom_zs"
            app:layout_constraintEnd_toEndOf="@+id/view_bottom_zs"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginStart="@dimen/dp_30"
            android:layout_marginBottom="@dimen/dp_30"
            android:layout_height="@dimen/dp_40"/>
        

        <com.github.mikephil.charting.charts.CombinedChart
            android:id="@+id/chart_zs"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="@+id/view_bottom_zs"
            app:layout_constraintEnd_toEndOf="@+id/view_bottom_zs"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginStart="@dimen/dp_30"
            android:layout_marginBottom="@dimen/dp_30"
            android:paddingBottom="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_30"
            app:layout_constraintBottom_toBottomOf="@+id/view_bottom_zs"
            app:layout_constraintTop_toBottomOf="@+id/view_legend"/>

<!--        <View-->
<!--            android:id="@+id/view_bottom_zs_line"-->
<!--            android:layout_width="0dp"-->
<!--            app:layout_constraintTop_toBottomOf="@+id/view_bottom_zs"-->
<!--            app:layout_constraintStart_toStartOf="@+id/view_bottom_zs"-->
<!--            app:layout_constraintEnd_toEndOf="@+id/view_bottom_zs"-->
<!--            android:layout_marginTop="@dimen/dp_30"-->
<!--            android:layout_marginStart="@dimen/dp_30"-->
<!--            android:layout_marginBottom="@dimen/dp_30"-->
<!--            android:layout_height="@dimen/dp_20"/>-->

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>

