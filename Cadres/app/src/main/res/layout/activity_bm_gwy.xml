<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_select"
        android:layout_width="0dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:background="@drawable/shape_00_bd1b21"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_height="@dimen/dp_40">

        <TextView
            android:id="@+id/table_zh"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:background="@color/color_bd1b21"
            android:text="综合管理类"/>

        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="match_parent"
            android:background="@color/color_bd1b21"/>

        <TextView
            android:id="@+id/table_zq"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="@color/color_bd1b21"
            android:background="@color/transparent"
            android:text="执法勤务类"/>

        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="match_parent"
            android:background="@color/color_bd1b21"/>

        <TextView
            android:id="@+id/table_jwjs"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="@color/color_bd1b21"
            android:background="@color/transparent"
            android:text="警务技术类"/>

        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="match_parent"
            android:background="@color/color_bd1b21"/>

        <TextView
            android:id="@+id/table_fgdj"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="@color/color_bd1b21"
            android:background="@color/transparent"
            android:text="法官/检察官等级"/>

        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="match_parent"
            android:background="@color/color_bd1b21"/>

        <TextView
            android:id="@+id/table_fgzldj"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="@color/color_bd1b21"
            android:background="@color/transparent"
            android:text="法官/检察官助理等级"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_select">

        <EditText
            android:id="@+id/et_search"
            android:layout_width="@dimen/dp_380"
            android:layout_height="@dimen/dp_40"
            android:background="@drawable/shape_db1b21_fce8e6_r40"
            android:drawableLeft="@mipmap/ic_search"
            android:drawablePadding="@dimen/dp_15"
            android:hint="请输入单位名称进行搜索"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:maxLength="20"
            android:maxLines="1"
            android:paddingStart="@dimen/dp_20"
            android:paddingEnd="@dimen/dp_15" />

        <TextView
            android:id="@+id/tv_screen_dwlb"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_40"
            android:layout_marginStart="@dimen/dp_20"
            android:background="@drawable/shape_db1b21_fce8e6_r40"
            android:drawableRight="@mipmap/ic_down"
            android:gravity="center_vertical"
            android:minWidth="@dimen/dp_140"
            android:paddingStart="@dimen/dp_20"
            android:paddingEnd="@dimen/dp_15"
            android:text="单位类别" />

        <TextView
            android:id="@+id/tv_screen_cpkq"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_40"
            android:layout_marginStart="@dimen/dp_20"
            android:background="@drawable/shape_db1b21_fce8e6_r40"
            android:drawableRight="@mipmap/ic_down"
            android:entries="@array/zcfg_array"
            android:gravity="center_vertical"
            android:minWidth="@dimen/dp_160"
            android:paddingStart="@dimen/dp_20"
            android:paddingEnd="@dimen/dp_15"
            android:text="超配空缺筛选" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_goneMarginTop="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_15"
        app:layout_constraintTop_toBottomOf="@+id/ll_search"
        android:orientation="horizontal">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <View
                android:id="@+id/view_title_left"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_100"
                android:background="@color/color_ffe5ce"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_dwmc"
                android:layout_width="@dimen/dp_120"
                android:layout_height="0dp"
                android:textSize="@dimen/sp_12"
                android:paddingStart="@dimen/dp_5"
                android:paddingEnd="@dimen/dp_5"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="@+id/view_title_left"
                app:layout_constraintTop_toTopOf="@+id/view_title_left"
                app:layout_constraintBottom_toBottomOf="@+id/view_title_left"
                android:text="单位名称"/>

            <View
                android:layout_width="@dimen/dp_1"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="@+id/tv_dwmc"
                app:layout_constraintEnd_toEndOf="@+id/tv_dwmc"
                app:layout_constraintBottom_toBottomOf="@+id/tv_dwmc"
                android:background="@color/color_ffd7b4"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_left"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/dp_20"
                android:orientation="vertical"
                android:overScrollMode="never"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/view_title_left"
                app:layout_constraintStart_toStartOf="@+id/view_title_left"
                app:layout_constraintTop_toBottomOf="@+id/view_title_left" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            android:scrollbars="none"
            android:fillViewport="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <include layout="@layout/title_bm_gwy_fgdj"/>
                <include layout="@layout/title_bm_gwy_fgzldj"/>
                <include layout="@layout/title_bm_gwy_jwjs"/>
                <include layout="@layout/title_bm_gwy_zh"/>
                <include layout="@layout/title_bm_gwy_zq"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:orientation="vertical"
                    android:overScrollMode="never" />

            </LinearLayout>


        </HorizontalScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>