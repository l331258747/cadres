<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/cl_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <View
        android:id="@+id/view_title"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_100"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_head"
        android:layout_width="@dimen/dp_100"
        app:layout_constraintStart_toStartOf="@+id/view_title"
        app:layout_constraintTop_toTopOf="@+id/view_title"
        app:layout_constraintBottom_toBottomOf="@+id/view_title"
        android:layout_height="0dp"/>

    <ImageView
        android:id="@+id/iv_head"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        app:layout_constraintTop_toTopOf="@+id/view_head"
        app:layout_constraintBottom_toBottomOf="@+id/view_head"
        tools:src="@mipmap/default_head"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginBottom="@dimen/dp_8"
        android:layout_marginStart="@dimen/dp_15"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="@+id/view_head"/>

    <ImageView
        android:id="@+id/iv_head_tag"
        android:layout_width="@dimen/dp_18"
        android:layout_height="@dimen/dp_18"
        app:layout_constraintBottom_toBottomOf="@+id/iv_head"
        android:src="@mipmap/ic_punishment_yellow"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginBottom="@dimen/dp_12"
        android:scaleType="fitCenter"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_marginStart="@dimen/dp_5"
        app:layout_constraintStart_toEndOf="@+id/iv_head"/>

    <TextView
        android:id="@+id/tv_head_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="affafd"
        android:textColor="@color/color_bd1b21"
        android:background="@color/color_ffe5ce"
        android:paddingStart="@dimen/dp_5"
        android:visibility="gone"
        android:textSize="@dimen/sp_12"
        tools:visibility="visible"
        android:paddingEnd="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_5"
        app:layout_constraintStart_toStartOf="@+id/iv_head_tag"
        app:layout_constraintTop_toBottomOf="@+id/iv_head_tag"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="@dimen/dp_50"
        android:layout_height="0dp"
        android:gravity="center"
        android:textSize="@dimen/sp_12"
        android:paddingStart="@dimen/dp_5"
        android:paddingEnd="@dimen/dp_5"
        app:layout_constraintStart_toEndOf="@+id/view_head"
        app:layout_constraintTop_toTopOf="@+id/view_title"
        app:layout_constraintBottom_toBottomOf="@+id/view_title"
        tools:text="姓名"/>

    <TextView
        android:id="@+id/tv_xrzw"
        android:layout_width="@dimen/dp_120"
        android:layout_height="0dp"
        android:gravity="center"
        android:textSize="@dimen/sp_12"
        android:paddingStart="@dimen/dp_5"
        android:paddingEnd="@dimen/dp_5"
        app:layout_constraintStart_toEndOf="@+id/tv_name"
        app:layout_constraintTop_toTopOf="@+id/view_title"
        app:layout_constraintBottom_toBottomOf="@+id/view_title"
        tools:text="现任职务"/>

    <View
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_1"
        app:layout_constraintStart_toStartOf="@+id/view_title"
        app:layout_constraintEnd_toEndOf="@+id/view_title"
        android:background="@color/color_ffd7b4"
        app:layout_constraintBottom_toBottomOf="@+id/view_title"/>

</androidx.constraintlayout.widget.ConstraintLayout>